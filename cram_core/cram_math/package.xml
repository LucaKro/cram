  <url type="bugtracker">https://github.com/cram2/cram_core/issues</url>
  <url type="repository">https://github.com/cram2/cram_core</url>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>sbcl</build_depend>
  <build_depend>alexandria</build_depend>
  <build_depend>gsll</build_depend>

  <run_depend>sbcl</run_depend>
  <run_depend>alexandria</run_depend>
  <run_depend>gsll</run_depend>
</package>
